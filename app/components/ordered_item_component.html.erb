<div class="my-1 list-group-item list-group-item-primary d-flex justify-content-between">
  <div class="d-flex flex-wrap justify-content-center align-items-center">
    <%= image_tag @order_item.item.cover_picture_with_fallback(:cart), loading: "lazy", style: "width: 100px;" %>
    <div class="m-2">
      <p><%= @order_item.item.name %></p>
      <p><%= t("order_item.index.item_info", day: @order_item.created_at.day, month: @order_item.created_at.month, year: @order_item.created_at.year, user: @order_item.order.user.email) %></p>
    </div>
  </div>
  <div class="d-flex align-items-center">
    <p><%= t("order_item.index.price", price: @order_item.price) %></p>
  </div>
</div>