<div class="bg-primary">
  <div class="container">
    <h2 class="pt-4 text-center text-light"><%= @shop.brand %></h2>
    <p class="text-center text-light"><%= @shop.website %></p>
    <div class="d-flex justify-content-around">
      <p class="text-light"><%= @shop.description %></p>
      <% if can? :manage, @shop %>
        <%= render 'shop_card',shop: @shop %>
      <% end %>
    </div>
    <% if can? :manage, @shop %>
      <div class="d-flex justify-content-between">
        <ul class="list-unstyled d-flex">
            <li class="m-3 text-warning">info visible uniquement par l'artisant</li>
        </ul>
        <%= button_to "Modifier", edit_shop_path(@shop.id), {method: 'get', form_class: "m-2 pt-1", class: "btn btn-outline-warning" } %>
      </div>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="row row-cols">
    <% @shop.items.each do |item| %>
      <%= render 'items/item_card', item: item %>
    <% end %>
  </div>
  <% if can? :manage, @shop %>
    <div class="d-flex justify-content-end">
      <%= button_to "Ajouter un produit", new_item_path, {method: 'get', form_class: "m-2 pt-1", class: "btn btn-success" } %>
    </div>
  <% end %>
</div>
