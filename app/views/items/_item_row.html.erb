  <ul class="list-group mt-4">
    <% cart.cart_items.each do |cart_item| %>
      <li class="list-group-item">
        <%= link_to "", cart_item_path(cart_item.id), method: "delete", data: { confirm: "Etes vous sÃ»re ?" }, class: "fas fa-trash color-change-to-danger mt-2 delete-icon" %>
        <div class="d-flex align-items-center justify-content-between">
          <div>
            <%= image_tag cart_item.item.item_pictures.last.picture[:cart].url %>
            <%= cart_item.item.name %>
          </div>
          <div class="d-flex">
            <%= link_to "", cart_item_path(cart_item.id, operation: "minus"), method: "put", class: "fas fa-minus-circle color-change-to-warning m-1" %>
            <p><%= cart_item.item_qty_in_cart %></p>
            <%= link_to "", cart_item_path(cart_item.id, operation: "plus"), method: "put", class: "fas fa-plus-circle color-change-to-success m-1" %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
