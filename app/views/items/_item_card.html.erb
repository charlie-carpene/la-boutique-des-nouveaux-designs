  <div class="card border-0 bg-light text-dark m-4" style="height:300px;width:200px">
    <% if item.item_pictures.present? %> <%# to be deleted when tests are over. same for items/show & items/_item_row %>
      <img src="<%= item.item_pictures.last.picture[:card].url %>" class="card-img" alt="...">
    <% else %>
      <%= image_tag "img-items/sac-0.jpg" %>
    <% end %>
    <div class="card-img-overlay d-flex flex-column align-items-center justify-content-end">
      <%= link_to item.name, item_path(item.id), class: "btn btn-primary stretched-link" %>
    </div>
    <div class="delete-icon">
      <% if can? :manage, item %>
        <%= link_to image_tag("icons/edit.svg", size: "20x20", class: "color-change-to-warning"), edit_item_path(item.id), class: "mt-2 delete-icon-bg" %>
        <%= link_to image_tag("icons/trash.svg", size: "20x20", class: "color-change-to-danger"), item_path(item.id), method: "delete", data: { confirm: "Etes vous sÃ»re?" }, class: "mt-2 delete-icon-bg" %>
      <% elsif current_user.present? %>
        <%= link_to image_tag("icons/cart_add.svg", size: "20x20", class: "color-change-to-success"), cart_items_path(item_id: item, cart_id: current_user.cart.id, item_qty_in_cart: 1), method: "post", class: "mt-2 delete-icon-bg" %>
      <% end %>
    </div>
  </div>
