<h2 class="mt-4 text-center text-primary">Salut <% if @user.addresses.present? %><%= @user.addresses.last.first_name %><% end %></h2>

<%= button_to "Ajouter une nouvelle adresse", new_user_address_path(current_user.id), method: "get", class: "btn btn-info" %>

<% if @user.addresses.present? %>
  <p>Voici tes adresse actuelles :</p>
  <% current_user.addresses.each do |address| %>
    <div class="d-flex justify-content-center">
      <%= link_to "Adresse n°#{address.id} #{address.first_name} #{address.last_name} #{address.address_line_2} #{address.address_line_1} #{address.zip_code} #{address.city}", edit_user_address_path(current_user.id, address.id), class: "nav-link dropdown-item" %>
      <div class="d-flex">
        <%= button_to "Modifier", edit_user_address_path(current_user.id, address.id), method: "get", class: "btn btn-info" %>
        <%= button_to "Supprimer", user_address_path(current_user.id, address.id), method: "delete", data: { confirm: "Etes vous sûre?" }, class: "btn btn-danger" %>
      </div>
    </div>
  <% end %>
<% end %>

<%= link_to "Editer mon mail et mot de passe", edit_user_registration_path, :class=>"btn btn-warning" %>
