<div class="container">
  <h2 class="mt-4 text-center text-primary">Mon profil</h2>

  <div class="mt-3">
    <h3>Mes identifiants de connection</h3>
    <div class="d-flex justify-content-between border border-primary rounded p-3 m-2">
        <div>Mon adresse mail et mon mot de passe</div>
        <div><%= @user.email %></div>
    </div>
    <div class="d-flex justify-content-end">
      <%= link_to "Modifier", edit_user_registration_path, :class=>"btn btn-warning" %>
    </div>
  </div>

  <h3>Me(s) adresse(s) de livraison</h3>
  <div class="d-flex flex-wrap">
    <% if @user.addresses.present? %>
      <% current_user.addresses.each do |address| %>
        <%= render 'addresses/address_card', address: address %>
      <% end %>
    <% end %>
  </div>
  <div class="d-flex justify-content-end">
    <%= button_to "Ajouter une adresse", new_user_address_path(current_user.id), method: "get", class: "btn btn-info" %>
  </div>
</div>
