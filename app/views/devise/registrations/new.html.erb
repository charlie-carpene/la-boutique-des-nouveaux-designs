<div class="container">
  <h2 class="mt-4 text-center text-primary"><%= t("devise.registration.new.title") %></h2>
  <%= devise_error_messages! %>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="field mt-4">
      <%= f.label t("form.email") %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="field mt-4">
      <%= f.label t("form.password") %>
      <% if @minimum_password_length %>
        <em>(<%= t("form.minimum_length", nbr: @minimum_password_length) %>)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="field mt-4">
      <%= f.label t("form.password_confirmation") %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="actions mt-4">
      <%= f.submit t("button.confirm"), class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="text-right">
    <em><%= render "devise/shared/links" %></em>
  </div>
</div>
