<div class="container">
  <h2 class="mt-4 text-center text-primary">Modifier mes identifiants</h2>
  <%= devise_error_messages! %>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

    <div class="field mt-4">
      <%= f.label 'Email' %><br />
      <%= f.email_field :email, class: "form-control" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field mt-4">
      <%= f.label 'Nouveau mot de passe' %> <i>(à laisser blanc si tu ne souhaites pas le modifier)</i><br />
      <%= f.password_field :password, autocomplete: "nouveau mot de passe", class: "form-control" %>
      <% if @minimum_password_length %>
        <em><%= @minimum_password_length %> caractères minimum</em>
      <% end %>
    </div>

    <div class="field mt-4">
      <%= f.label 'Confirmation du mot de passe' %><br />
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>

    <div class="field mt-4">
      <%= f.label 'Mot de passe actuel' %> <i>(ton mot de passe actuel est nécessaire pour confirmer tes changements)</i><br />
      <%= f.password_field :current_password, class: "form-control" %>
    </div>

    <div class="d-flex justify-content-between my-4">
      <%= link_to "Retour", :back, class: "btn btn-primary" %>

      <%= f.submit "Mettre à jour", class: "btn btn-success" %>
    </div>
  <% end %>

  <div class="text-left">
    <%= link_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Etes vous sûre?" }, method: :delete, class: "text-danger" %>
  </div>
</div>
