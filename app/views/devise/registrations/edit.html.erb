<div class="container">
  <h2 class="mt-4 text-center text-primary"><%= t("devise.registration.edit.title") %></h2>
  <%= devise_error_messages! %>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

    <div class="field mt-4">
      <%= f.label t("form.email") %><br />
      <%= f.email_field :email, class: "form-control" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field mt-4">
      <%= f.label t("form.new_password") %> <i><%= t("form.new_password_notice") %></i><br />
      <%= f.password_field :password, autocomplete: "nouveau mot de passe", class: "form-control" %>
      <% if @minimum_password_length %>
        <em><%= t("form.minimum_length", nbr: @minimum_password_length) %></em>
      <% end %>
    </div>

    <div class="field mt-4">
      <%= f.label t("form.password_confirmation") %><br />
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>

    <div class="field mt-4">
      <%= f.label t("form.current_password") %> <i><%= t("form.password_notice") %></i><br />
      <%= f.password_field :current_password, class: "form-control" %>
    </div>

    <div class="d-flex justify-content-between my-4">
      <%= link_to t("buttn.back"), :back, class: "btn btn-primary" %>

      <%= f.submit t("button.update"), class: "btn btn-success" %>
    </div>
  <% end %>

  <div class="text-left">
    <%= link_to t("button.delete_.my_account"), registration_path(resource_name), data: { confirm: t("button.delete_.are_you_sure") }, method: :delete, class: "text-danger" %>
  </div>
</div>
